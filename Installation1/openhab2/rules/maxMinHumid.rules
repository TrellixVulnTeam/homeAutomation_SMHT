import java.lang.Math
import java.text.SimpleDateFormat

rule "Update Livingroom Humidity Min- and Max values"
when
    Item  gLivingroom_Humidity received update
then
    var Number Min
    var Number Max
    var String tmp
    var SimpleDateFormat df = new SimpleDateFormat( "HH:mm" )

    if (gLivingroom_Humidity.state instanceof DecimalType) {
        Min = (gLivingroom_Humidity.minimumSince(now.toLocalDate.toDateTimeAtStartOfDay, "rrd4j").state as DecimalType)
        tmp = (Math::round(Min.floatValue*10.0)/10.0) + " % (" + df.format(gLivingroom_Humidity.minimumSince(now.toLocalDate.toDateTimeAtStartOfDay, "rrd4j").timestamp) + ")"
        postUpdate(gLivingroom_Humidity_Min_Formatted, tmp)

        Max = gLivingroom_Humidity.maximumSince(now.toLocalDate.toDateTimeAtStartOfDay, "rrd4j").state as DecimalType
        df = new SimpleDateFormat( "HH:mm" )
        tmp = (Math::round(Max.floatValue*10.0)/10.0) + " % (" + df.format(gLivingroom_Humidity.maximumSince(now.toLocalDate.toDateTimeAtStartOfDay, "rrd4j").timestamp) + ")"
        postUpdate(gLivingroom_Humidity_Max_Formatted, tmp)
    }
end

